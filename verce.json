{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public_html/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public_html/$1"
    }
  ],
  "env": {
    "MONGO_URI": "@mongo_uri",  // Set your MongoDB URI
    "PORT": "3000"
  }
}
